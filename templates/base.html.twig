<!DOCTYPE html>
<html class="p-3 mb-2 bg-light text-dark">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="app flex-row align-items-center p-3 mb-2 bg-light text-dark">
    <header class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Subscriber</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('admin_subscriber_index') }}">Subscribers list</a>
                </li>
            </ul>

            {% if app.user %}
            <span class="navbar-text">
              {{ app.user.email }}
                <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-secondary" type="button">Logout</a>
            </span>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-outline-success" type="button">Login</a>
            {% endif %}
        </div>
    </header>
        {% block body %}{% endblock %}
        {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
    <footer class="app-footer">
        <div class="ml-auto">
            Subscriber&copy; {{ 'now'|date('Y') }}
        </div>
    </footer>
    </body>
</html>
